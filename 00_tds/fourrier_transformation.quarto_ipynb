    },
    {
      "cell_type": "code",
      "metadata": {},
      "source": [
        "from scipy.integrate import quad\n",
        "\n",
        "def tf_integral(f, nu, T):\n",
        "    \"\"\"Compute FT of f at frequency nu over [-T/2, T/2] using scipy quad.\"\"\"\n",
        "    real_part = quad(lambda t: np.real(f(t) * np.exp(-2j * np.pi * nu * t)), -T/2, T/2)[0]\n",
        "    imag_part = quad(lambda t: np.imag(f(t) * np.exp(-2j * np.pi * nu * t)), -T/2, T/2)[0]\n",
        "    return real_part + 1j * imag_part"
      ],
